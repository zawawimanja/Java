public class Exercise19 {
      public static void main(String args[])
          {
       int i,j,r=4;

   for(i=0;i<=r;i++)
   {
     for(j=4;j>=i;j--){
     System.out.print(" ");
     }
     
     for(j=1;j<=2*i-1;j++){
       System.out.print("*");
    
     }
      System.out.println();
   
        }
       
    }
}

//it will print odd * to become pyramid
1 ,3,5

